<!-- Example testng.xml -->
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="BookManagement API Testing">
    <test name="Application HealthCheck">
        <classes>
            <class name="tests.HealthCheck.HealthCheck"/>
        </classes>
    </test>
    <test name="User Authentication">
        <classes>
            <class name="tests.UserAuthentication.SignUpUserAuthentication"/>
        </classes>
    </test>
    <test name="CRUD Operation on BookManagement">
        <classes>
            <class name="tests.BookManagement.createBookDetails"/>
            <class name="tests.BookManagement.getBooks"/>
            <class name="tests.BookManagement.updateBookDetails"/>

        </classes>
    </test>
</suite>